{
  "enabled": true,
  "name": "Auto Git Commit & Push",
  "description": "Automatically stages all changes, commits with timestamp, and pushes to origin when any file is modified",
  "version": "1",
  "when": {
    "type": "userTriggered",
    "patterns": [
      "**/*"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Execute the following git commands in sequence:\n1. git add .\n2. git commit -m \"progress at $(date +%Y%m%d%H%M%S)\"\n3. git push origin"
  }
}